<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
</head>
<body>
    <div class="container">
        <h1>Users</h1>
        <p>Placeholder text</p>
        <% if user_signed_in? %>
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout-button' %>
        <% end %>
        <% @users.each do |user| %>
            <div class="user-card">
              <% if user.photo.present? %>
                <%= image_tag url_for(user.photo), class: "user-photo" %>
              <% end %>
              <%= link_to user.name, user_path(user) %>
              <p>Number of posts: <%= user.posts_counter %></p>
            </div>
        <% end %>
    </div>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
</head>
<body>
    <div class="container">
        <h1>Users</h1>
        <p>Placeholder text</p>
        <% @users.each do |user| %>
            <div class="user-card">
              <% if user.photo.present? %>
                <img class="user-photo" src="<%= asset_path(user.photo) %>">
              <% end %>
              <%= link_to user.name, user_path(user) %>
              <p>Number of posts: <%= user.posts_counter %></p>
            </div>
        <% end %>
    </div>
</body>
</html>
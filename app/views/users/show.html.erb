<!DOCTYPE html>
<html>
<head>
    <title><%= @user.name %></title>
</head>
<body>
    <section class="card-container">
      <div class="post-wrapper">
        <div class="user-info">
          <% if @user.photo.present? %>
            <img src="<%= asset_path(@user.photo) %>">
          <% end %>
          <h1><%= @user.name %></h1>
        </div>
        <p><%= @user.bio %></p>
        <p class = 'user-show-numPost'>Number of posts: <%= @user.posts.count %></p>
        <% @user.recent_posts.each do |post| %>
          <div class="post">
            <h2><%= link_to post.title, user_post_path(@user, post) %></h2>
            <p><%= post.text %></p>
            <p class="post-info">Likes: <%= post.likes_counter %></p>
            <p class="post-info">Comments: <%= post.comments_counter %></p>
          </div>
        <% end %>
        <%= link_to 'View All Posts', user_posts_path(@user), class: 'button' %>
      </div>
    </section>
</body>
</html>